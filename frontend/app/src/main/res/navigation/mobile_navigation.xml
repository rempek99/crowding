<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="pl.remplewicz.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_second_fragment"
            app:destination="@id/navigation_second_fragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"/>
        <action
            android:id="@+id/action_navigation_home_to_navigation_create_event_fragment"
            app:destination="@id/navigation_create_event_fragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_second_fragment"
        android:name="pl.remplewicz.ui.list.EventList"
        android:label="fragment_second"
        tools:layout="@layout/fragment_event_list" >
        <action
            android:id="@+id/action_navigation_second_fragment_to_home"
            app:destination="@id/navigation_home"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"/>
    </fragment>
    <fragment
        android:id="@+id/navigation_create_event_fragment"
        android:name="pl.remplewicz.ui.create.CreateEventFragment"
        android:label="fragment_add_event"
        tools:layout="@layout/fragment_create_event" >
        <action
            android:id="@+id/action_navigation_create_event_fragment_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>

</navigation>